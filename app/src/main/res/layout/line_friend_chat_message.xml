<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:baselineAligned="false">
    
    <RelativeLayout
        android:id="@+id/friendcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <TextView
            android:id="@+id/friend_message"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=" chat This is messahe chat"
            android:layout_gravity="right"
            android:textIsSelectable="true"
            android:autoLink="web"
            />


        <TextView
            android:id="@+id/friend_timestamp"
            android:layout_gravity="left"
            android:layout_below="@+id/friend_message"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time of chat"
            android:padding="5dp"
/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/selfcontent"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/user_message"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text=" chat This is messahe chat"
            android:layout_gravity="right"
            android:textIsSelectable="true"
            android:autoLink="web"
/>

        <TextView
            android:id="@+id/user_timestamp"
            android:layout_gravity="right"
            android:layout_marginRight="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time of chat"
            android:padding="5dp"
/>
    </LinearLayout>

</LinearLayout>
